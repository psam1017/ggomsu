<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>/</display-name>
  <welcome-file-list>
    <welcome-file>/views/Forward.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>host</param-name>
    <param-value>mw-002.cafe24.com</param-value>
  </context-param>
  <context-param>
    <param-name>email</param-name>
    <param-value>noreply@ggomsu.com</param-value>
  </context-param>
  <context-param>
    <param-name>password</param-name>
    <param-value>bluff12!@</param-value>
  </context-param>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>com.ggomsu.system.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>AdminController</servlet-name>
    <servlet-class>com.ggomsu.app.admin.controller.AdminController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminController</servlet-name>
    <url-pattern>/admin/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AlarmController</servlet-name>
    <servlet-class>com.ggomsu.app.alarm.controller.AlarmController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AlarmController</servlet-name>
    <url-pattern>/alarm/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ArticleController</servlet-name>
    <servlet-class>com.ggomsu.app.board.controller.ArticleController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ArticleController</servlet-name>
    <url-pattern>/article/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CommentController</servlet-name>
    <servlet-class>com.ggomsu.app.board.controller.CommentController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CommentController</servlet-name>
    <url-pattern>/comment/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>HelpController</servlet-name>
    <servlet-class>com.ggomsu.app.help.controller.HelpController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HelpController</servlet-name>
    <url-pattern>/help/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MemberController</servlet-name>
    <servlet-class>com.ggomsu.app.member.controller.MemberController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberController</servlet-name>
    <url-pattern>/member/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MyController</servlet-name>
    <servlet-class>com.ggomsu.app.my.controller.MyController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MyController</servlet-name>
    <url-pattern>/my/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ReportController</servlet-name>
    <servlet-class>com.ggomsu.app.report.controller.ReportController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReportController</servlet-name>
    <url-pattern>/report/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UploadController</servlet-name>
    <servlet-class>com.ggomsu.app.upload.controller.UploadController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UploadController</servlet-name>
    <url-pattern>/upload/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>WikiController</servlet-name>
    <servlet-class>com.ggomsu.app.wiki.controller.WikiController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WikiController</servlet-name>
    <url-pattern>/wiki/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>HomeController</servlet-name>
    <servlet-class>com.ggomsu.app.home.controller.HomeController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomeController</servlet-name>
    <url-pattern>/main</url-pattern>
    <url-pattern>/dark-mode</url-pattern>
    <url-pattern>/farewell</url-pattern>
    <url-pattern>/error/*</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>400</error-code>
    <location>/views/errors/400.jsp</location>
  </error-page>
  <error-page>
    <error-code>401</error-code>
    <location>/views/errors/Error.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/views/errors/Error.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/views/errors/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>405</error-code>
    <location>/views/errors/405.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/views/errors/500.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.NullPointerException</exception-type>
    <location>/views/errors/Null.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.sql.SQLException</exception-type>
    <location>/views/errors/SQL.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/views/errors/Error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.RuntimeException</exception-type>
    <location>/views/errors/Error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/views/errors/Error.jsp</location>
  </error-page>
</web-app>