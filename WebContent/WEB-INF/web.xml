<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>/</display-name>
  <welcome-file-list>
    <welcome-file>/app/index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>host</param-name>
    <param-value>mw-002.cafe24.com</param-value>
  </context-param>
  <context-param>
    <param-name>email</param-name>
    <param-value>noreply@ggomsu.com</param-value>
  </context-param>
  <context-param>
    <param-name>password</param-name>
    <param-value>##서버 등록할 때 작성##</param-value>
  </context-param>
  <filter>
  	<filter-name>encodingFilter</filter-name>
  	<filter-class>com.ggomsu.app.filter.EncodingFilter</filter-class>
  	<init-param>
  	  <param-name>encoding</param-name>
  	  <param-value>UTF-8</param-value>
  	</init-param>
  </filter>
  <filter-mapping>
  	<filter-name>encodingFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>MemberFrontController</servlet-name>
    <servlet-class>com.ggomsu.app.member.service.MemberFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberFrontController</servlet-name>
    <url-pattern>/member/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BoardFrontController</servlet-name>
    <servlet-class>com.ggomsu.app.board.service.BoardFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BoardFrontController</servlet-name>
    <url-pattern>/board/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>WikiFrontController</servlet-name>
    <servlet-class>com.ggomsu.app.wiki.service.WikiFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WikiFrontController</servlet-name>
    <url-pattern>/wiki/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AdminFrontController</servlet-name>
    <servlet-class>com.ggomsu.app.admin.service.AdminFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminFrontController</servlet-name>
    <url-pattern>/admin/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UploadFrontController</servlet-name>
    <servlet-class>com.ggomsu.app.upload.controller.UploadFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UploadFrontController</servlet-name>
    <url-pattern>/upload/*</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>400</error-code>
    <location>/app/error/Error.jsp</location>
  </error-page>
  <error-page>
    <error-code>401</error-code>
    <location>/app/error/Error.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/app/error/Error.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/app/error/Error404.jsp</location>
  </error-page>
  <error-page>
    <error-code>405</error-code>
    <location>/app/error/Error405.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/app/error/Error500.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.NullPointerException</exception-type>
    <location>/app/error/ErrorNull.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.sql.SQLException</exception-type>
    <location>/app/error/ErrorSQL.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/app/error/Error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.RuntimeException</exception-type>
    <location>/app/error/Error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/app/error/Error.jsp</location>
  </error-page>
</web-app>